 <!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css">
    <meta charset="UTF-8">
     <link rel="icon" type="image/jpeg" href="photos/mypp.jpg">

</head>

<body id="projpage">
    <!-- Main Content -->
    {{> main }}

  <div class="back1">
    <a href="/work" class="button3">Back</a>
</div>


    <!-- Project Title and Category -->
   <section class="project-title-section">
    <div class="project-title">
        <h1 class="project-name">{{project.title}}</h1>
        <p class="project-category">{{project.category}}</p>
        <img src="/photos/down.jpeg" alt="Down Arrow" class="arrow-image">
    </div>
</section>

<section class="project-image-section">
<div class="project-images">
            <img src="{{project.img1}}" >
            <img src="{{project.img2}}">
            <img src="{{project.img3}}" >
            {{#if project.recording}}
            <video width="6400" height="480" controls>
                <source src="{{project.recording}}" type="video/mp4">
                Your browser does not support the video tag.
             </video>
        {{/if}}
</section>

    <!-- Project Description and Details -->
    <section class="project-block">
        <div class="project-des">{{project.description}}</div>
        <div class="project-git">
            <a class="project-git-name" href="{{project.url}}" target="_blank">{{project.sitename}}</a>
        </div>
        

        <!-- Tools -->
        <div class="project-tools-section">
            <h2 class="project-tools-title">Tools</h2>
            <ul>
                {{#each project.tools}}
                <li class="project-tools">{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </section>

    <!-- Footer -->
    {{> footer }}

    
</body>

</html>
