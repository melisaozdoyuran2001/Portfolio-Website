                        </label>
                    </div>
                </div>
            </label>
            </div>

             <div class="planet planet-1"></div>
            <div class="planet planet-2"></div>
             <div class="planet planet-3"></div>
             <div class="planet planet-4"></div>
             <div class="star star-1"></div>
            <div class="star star-2"></div>
            <div class="star star-3"></div>
            <div class="decor"></div>
            <div class="home-case">
                <div class="home-box">
                    <div class="typewriter-container">
                        <div class="typewriter-1">
                            <h1>MELISA Ã–ZDOYURAN</h1>
                        </div>
                    </div>
                </div> 
                <div class="button-container"> 
                    <a class="home-button" href="/about"><span>about me</span></a>
                    <a class="home-button" href="/work"><span>my work</span></a>
                    <a class="home-button" href="/contact"><span>let's chat</span></a>
                     <a class="home-button" href="/fun"><span>time for fun? </span></a>
                </div>

            </div>
            
            <div class="logos">
                <div class="linkedin-block">
                    <a href="https://www.linkedin.com/in/melisa-ozdoyuran/" target="_blank">
                    <i id="linkedin-logo" class="fab fa-linkedin-in"></i>
                    </a>
                </div>
                <div class="instagram-block">
                    <a href="https://www.instagram.com/melisaozdoyuran/?hl=en" target="_blank">
                    <i id="instagram-logo" class="fab fa-instagram"></i>
                    </a>
                </div>
                <div class="github-block">
                    <a href="https://github.com/melisaozdoyuran2001" target="_blank">
                    <i id="github-logo" class="fab fa-github"></i>
                    </a>
                </div>
            </div>
        </div>
        
        {{> footer}}

        <script>
      document.addEventListener('DOMContentLoaded', function() {
  const onoffSwitch = document.getElementById('onoff');
  const homeElement = document.querySelector('.home');
  const bodyElement = document.querySelector('body');
  const titleElement = document.querySelector('.typewriter-1 h1');
  const buttonContainer = document.querySelector('.button-container');

  onoffSwitch.addEventListener('change', function() {
    console.log("Switch toggled!");  // Debugging line
    if (this.checked) {
      homeElement.classList.add('show-planets', 'show-stars');
      bodyElement.classList.add('saturn-cursor');
      titleElement.classList.add('change-font');
      buttonContainer.classList.add('change-button-font');
    } else {
      homeElement.classList.remove('show-planets', 'show-stars');
      bodyElement.classList.remove('saturn-cursor');
      titleElement.classList.remove('change-font');
       buttonContainer.classList.remove('change-button-font');
    }
  });
});



    </script>
    </body>
   
</html>
